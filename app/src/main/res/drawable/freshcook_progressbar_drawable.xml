<?xml version="1.0" encoding="utf-8"?>
<rotate android:pivotX="50%" android:pivotY="50%" android:fromDegrees="0" android:toDegrees="1440" xmlns:android="http://schemas.android.com/apk/res/android">

    <shape android:shape="ring"
        android:innerRadius="20dp"
        android:thickness="4dp"
        android:useLevel="false">

        <gradient
            android:type="linear"
            android:startColor="#800000"
            android:centerColor="#800000"
            android:endColor="@android:color/background_dark"/>

        <size
            android:width="40dp"
            android:height="40dp"/>

    </shape>

</rotate>
