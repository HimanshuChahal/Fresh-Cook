<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:paddingHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/itemLinearLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/itemsLinearLayout"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:id="@+id/itemsImageView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_marginEnd="80dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:id="@+id/itemNameTextView"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/background_dark"
                    android:textSize="12sp"
                    android:text="@string/rupees_symbol"
                    android:singleLine="true"
                    android:id="@+id/itemSellingPriceTextView"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="12sp"
                    android:text="@string/rupees_symbol"
                    android:singleLine="true"
                    android:id="@+id/itemPriceTextView"/>

            </LinearLayout>

            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/popup_drawable"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@android:color/background_light"
                android:textSize="12sp"
                android:text="Add"
                android:id="@+id/itemAddButton"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>